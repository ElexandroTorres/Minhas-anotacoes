        <item name="colorPrimary">#8a695e</item>
        <item name="colorPrimaryVariant">#5c3e34</item>
        <item name="colorOnPrimary">#8a695e</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#8a695e</item>
